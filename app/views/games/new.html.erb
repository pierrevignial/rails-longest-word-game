<h1>New Game</h1>
<div class="letter-array">
  <% @letters.each do |letter|  %>
    <div class="letter-card">
      <%= letter %>
    </div>
  <% end %>
</div>
<br>
<br>
<br>
<div class="container">
  <h3>What is the longest word you  can think of?</h3>
  <div class="form-div">
    <form action="/score" method="post">
      <input class="input-box" type="text" name="word" value="<%= params[:word] %>">
      <input class="input-button" type="submit" value="Submit">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letters %>
    </form>
  </div>
</div>

